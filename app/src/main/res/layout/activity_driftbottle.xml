<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottle_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/bottle_layout_title"
        android:layout_width="fill_parent"
        android:layout_height="55dip"

        android:visibility="gone">

        <Button
            android:id="@+id/bottle_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="漂流瓶"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/bottle_title"
            android:layout_width="67dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:src="@drawable/mm_title_btn_set_normal" />
    </RelativeLayout>

    <ImageView

        android:id="@+id/bottle_img"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/bottle_balloon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/rl_first_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_first_home"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:src="@drawable/bottle_a" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_first_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_below="@+id/iv_first_home"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/friend_discard_bottle"
                android:textColor="@color/black_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_second_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_second_match"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:paddingBottom="5dp"
                android:src="@drawable/net" />

            <TextView
                android:id="@+id/tv_second_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_below="@+id/iv_second_match"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/friend_collect_bottle"
                android:textColor="@color/black_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_third_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_third_recommend"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:src="@drawable/bottle_b" />

            <TextView
                android:id="@+id/tv_third_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_below="@+id/iv_third_recommend"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/friend_my_bottle"
                android:textColor="@color/black_1" />
        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="94dp"
        android:layout_marginTop="167dp"
        android:src="@drawable/bird_a" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottle_img"
        android:layout_marginBottom="-80dp"
        android:layout_toStartOf="@+id/imageView"
        android:src="@drawable/bird_b" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:layout_toEndOf="@+id/bottle_img"
        android:src="@drawable/bird_c"
        />

    <ImageView
        android:id="@+id/bottle_img_p"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginEnd="46dp"
        android:src="@drawable/balloon_v" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tree" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="147dp"
        android:src="@drawable/shell" />


</RelativeLayout>